<?xml version="1.0"?>
<config>
	<sections>
		<payment>
			<groups>
				<payssion_payssion translate="label" module="payssion">
					<label>Payssion Settings</label>
					<frontend_type>text</frontend_type>
					<sort_order>0</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>0</show_in_store>
					<fields>
						<payssion_apikey translate="label,comment">
							<label>API Key</label>
							<comment>You can find the API Key in your app setting at your
								payssion account.
							</comment>
							<frontend_type>text</frontend_type>
							<sort_order>1</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</payssion_apikey>
						<payssion_secretkey translate="label,comment">
							<label>Secret Key</label>
							<comment>You can find the Secret Key in your app setting at your
								payssion account.
							</comment>
							<frontend_type>text</frontend_type>
							<sort_order>2</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</payssion_secretkey>
						<payssion_sandbox translate="label comment">
							<label>Sandbox</label>
							<comment>
								<![CDATA[Sandbox for testing module<br /><span class="notice">This is a required field</span>]]>
							</comment>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>3</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</payssion_sandbox>
					</fields>
				</payssion_payssion>
				<payssion_molpay translate="label" module="payssion">
					<label>MOLPay (via Payssion)</label>
					<frontend_type>text</frontend_type>
					<sort_order>1</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>0</show_in_store>
					<fields>
						<active translate="label">
							<label>Enabled</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>2</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</active>
					</fields>
				</payssion_molpay>
				</groups>
		</payment>
	</sections>
</config>